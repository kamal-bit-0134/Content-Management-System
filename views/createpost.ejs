<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Create Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="registration.css">
    <script>
        function validateForm(event) {
            event.preventDefault(); // Prevent the form from submitting initially

            var title = document.getElementById('title').value;
            var fileInput = document.getElementById('image');
            var description = document.getElementById('description').value;
            var errorContainer = document.getElementById('error-container');
            errorContainer.innerHTML = ''; // Clear any previous error messages

            if (title.trim() === '') {
                displayErrorMessage('Please enter a title');
                return false; // Prevent form submission if validation fails
            }

            if (fileInput.files.length === 0) {
                displayErrorMessage('Please select an image file');
                return false; // Prevent form submission if validation fails
            }

            if (description.trim() === '') {
                displayErrorMessage('Please enter a description');
                return false; // Prevent form submission if validation fails
            }

            // If validation passes, you can submit the form
            document.loginForm.submit();
        }

        function displayErrorMessage(message) {
            var errorContainer = document.getElementById('error-container');
            var errorMessage = document.createElement('p');
            errorMessage.classList.add('error-message');
            errorMessage.textContent = message;
            errorContainer.appendChild(errorMessage);
            setTimeout(function() {
                    while (errorContainer.firstChild) {
                        errorContainer.removeChild(errorContainer.firstChild);
                    }
                }, 3000);
        }
    </script>
    
</head>
<body background="bgimg2.jpg" style="background-size: cover;">
