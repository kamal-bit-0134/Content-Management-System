      <div class="container " >
        <h1 style="font-weight:600; ">Create Post</h1>

        <form name="loginForm" action="/createPost" method="post" enctype="multipart/form-data" onsubmit="validateForm(event)">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title"><br>
            <input type="file" id="image" name="image" accept="image/*" style="margin-top: 6px; margin-bottom: 6px;">

            
            <label for="description">Description:</label>
            <!-- <input type="password" id="password" name="password"><br> -->
            <textarea id="description" name="description" placeholder="Enter your text here"></textarea>
            
            <input type="submit" value="Create">
        </form>
        <div id="error-container"></div>
        <p><%= locals.message %></p>


    </div>



    

